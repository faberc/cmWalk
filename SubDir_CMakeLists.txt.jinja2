{%  if files|length > 0 %}
target_sources(${CURRENT_EXE_NAME}
    PUBLIC
    {% for fname in files %}
        ${CMAKE_CURRENT_LIST_DIR}/{{ fname }}
    {% endfor %}
)

target_include_directories(${CURRENT_EXE_NAME} PUBLIC "${CMAKE_CURRENT_LIST_DIR}")

{% endif %}
{% for subdir in subdirs %}
include(${CMAKE_CURRENT_LIST_DIR}/{{ subdir }}/CMakeLists.txt)
{% endfor %}
